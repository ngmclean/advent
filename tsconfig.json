{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "useUnknownInCatchVariables": true,
        "module": "ES2022",
        "target": "ES2022",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "typeRoots": ["node_modules/@types"],
        "outDir": "bin",
        "sourceMap": true
    },
    "include": ["src/**/*"],
    "ts-node": {
        "esm": true
    }
}